{
  "name": "browserslist-rs",
  "version": "0.2.0",
  "author": "Pig Fang <g-plane@hotmail.com>",
  "license": "MIT",
  "repository": "https://github.com/g-plane/browserslist-rs",
  "main": "index.js",
  "types": "index.d.ts",
  "files": [
    "index.js",
    "index.d.ts"
  ],
  "scripts": {
    "sync": "ts-node ./scripts/sync.ts",
    "test:napi": "mocha -r=ts-node/register tests/napi.test.ts",
    "test:wasm": "mocha -r=ts-node/register tests/wasm.test.ts",
    "build:napi": "napi build --features=node --cargo-name=browserslist --platform --release",
    "build:napi:dev": "napi build --features=node --cargo-name=browserslist",
    "build:wasm:node": "wasm-pack build --target=nodejs --out-dir=pkg/node && ts-node ./scripts/post-node-build-wasm.ts",
    "build:wasm:node:dev": "wasm-pack build --target=nodejs --out-dir=pkg/node --dev && ts-node ./scripts/post-node-build-wasm.ts",
    "build:wasm:web": "wasm-pack build --target=web --out-dir=pkg/web && ts-node ./scripts/post-web-build-wasm.ts",
    "build:wasm:web:dev": "wasm-pack build --target=web --out-dir=pkg/web --dev && ts-node ./scripts/post-web-build-wasm.ts",
    "prepublishOnly": "tsc -p ./tsconfig.build.json && napi prepublish -t npm --skip-gh-release"
  },
  "napi": {
    "name": "browserslist-rs",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-unknown-linux-musl",
        "aarch64-apple-darwin"
      ]
    }
  },
  "dependencies": {
    "@node-rs/helper": "^1.2.1"
  },
  "devDependencies": {
    "@gplane/tsconfig": "^5.0.0",
    "@napi-rs/cli": "^1.3.5",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.11.7",
    "browserslist": "^4.18.1",
    "electron-to-chromium": "^1.3.901",
    "mocha": "^9.1.3",
    "node-releases": "^2.0.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  }
}
